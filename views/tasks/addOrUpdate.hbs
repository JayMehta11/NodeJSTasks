<h3>{{title}}</h3>
<form method="POST" action="/tasks" autocomplete="off">
    <input type="hidden" name="id" value="{{task._id}}">
    <div class="form-group">
        <label class="form-label">Task</label>
        <input type="text" name="taskTitle" class="form-control" value="{{task.taskTitle}}">
        <div class="text-danger">{{task.taskTitleError}}</div>
    </div>
    <div class="form-group">
        <label class="form-label">Description</label>
        <input type="text" name="taskDescription" class="form-control" value="{{task.taskDescription}}">
    </div>
    <input class="btn btn-success" type="submit" value="{{btn}}">
    <a class="btn btn-primary" href="/tasks">View All</a>
</form>