<h3>Task List <a class="btn btn-success" href="/tasks/add/">Create New</a></h3>
<br/>
<br/>
<table class="table table-stripped">
    <thead class="thead-light">
        <tr>
            <th>Task</th>
            <th>Description</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        {{#unless tasks.length}}
        <tr>
            <td colspan="3" class="text-center">No Records Found</td>
        </tr>
        {{/unless}}
        {{#each tasks}}
        <tr>
            <td>{{this.taskTitle}}</td>
            <td>{{this.taskDescription}}</td>
            <td><a class="btn btn-danger" href="/tasks/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this?');">Delete</a> &nbsp; <a class="btn btn-warning" href="/tasks/update/{{this._id}}">Update</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>